<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.holiday.booktimeoff">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeScreenActivity" />
        <activity android:name=".BookingActivity"
            android:parentActivityName=".HomeScreenActivity"/>
        <activity android:name=".LoginActivity" />
        <activity android:name=".SignUpActivity"
            android:parentActivityName=".LoginActivity"/>
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ViewActivity"
            android:parentActivityName=".HomeScreenActivity"/>
        <activity android:name=".EditActivity" />
        <activity android:name=".TimeSheetsActivity"
            android:parentActivityName=".HomeScreenActivity"></activity>
    </application>

</manifest>